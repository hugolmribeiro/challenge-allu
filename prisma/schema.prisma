generator client {
  provider = "prisma-client-js"
  engineType = "binary"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          Int      @id @default(autoincrement())
  name        String
  email       String   @unique
  password    String  
  createdAt   String   
  updatedAt   String?

  @@map("users")
}

model Product {
  id          Int @id @default(autoincrement())
  name        String
  code        String @unique
  price       Float
  description String?
  image       String?

  @@map("products")
}

